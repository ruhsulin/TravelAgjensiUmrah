@{
    ViewData["Title"] = "Users";
}

@section Styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

    <!-- jQuery Confirm -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Users</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Manage Users List</h3>
                    </div>
                    <!-- end of /.card-header -->
                    <div class="card-body">
                        <table id="user-list" class="table table-bordered table-hover">
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

@section Scripts {
    <!-- DataTables  & Plugins -->
    <script src="~/theme/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/theme/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/theme/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/theme/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/theme/plugins/jszip/jszip.min.js"></script>
    <script src="~/theme/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/theme/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- jQuery Confirm -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

    <script>
        $(document).ready(function () {
            var url = "@Url.Action("GetUsersJson", "Users")"; // Use GetUsersJson action

            $("#user-list").DataTable({
                buttons: [
                    'copy', 'excel', 'pdf'
                ],
                dom: 'Bfrtip',
                pageLength: 5,
                responsive: true,
                autoWidth: false,
                order: [[0, "desc"]],
                //"processing": true,
                //"serverSide": true,
                //"filter": true,
                //"orderMulti": false,

                ajax: {
                    url: url,
                    dataSrc: ""
                },
                columns: [ 
                   
                    { data: "name", title: "Name", width: "4%"},
                    { data: "surname", title: "Surname", width: "4%"},
                    { data: "email", title: "Email", width: "4%"},
                    { data: "emailConfirmed", title: "EmailConfirmed", width: "4%",
                      render: function(a, b, data, d) {
                            if (data.emailConfirmed == true) { return '<i class="fa fa-check text-success"></i>'; }
                            else { return '<i class="fa fa-times text-danger"></i>'; }
                         }},
                    { data: null,
                        title: "Actions",
                        sClass: "text-center",
                        width: "4%",
                        render: function (a, b, data, d) {
                            var actions = '<div class="btn-group btn-hspace">'
                                + '<button type="button" data-toggle="dropdown" class="btn btn-default btn-sm dropdown-toggle" aria-expanded="true"><span class="icon mdi mdi-chevron-down"></span></button>'
                                + '<div class="dropdown-menu dropdown-menu-right">';

                            var urlDetails = '@Url.Action("Details", "Users", new {area = "Admin"})';
                            actions += '<a class="dropdown-item" href="' + urlDetails + '/' + data.id + '"data-id"' + data.id + '"> <i class="fa fa-edit text-info"></i> Details</a>';
                            
                            var urlEdit = '@Url.Action("Edit", "Users", new {area = "Admin"})';
                            actions += '<a class="dropdown-item" href="' + urlEdit + '/' + data.id + '"data-id"' + data.id + '"> <i class="fa fa-edit text-warning"></i> Edit</a>';
                            actions += '<a class="dropdown-item js-delete" href="javascript:void(0)" data-id="' + data.id + '"><i class="fa fa-trash text-danger"></i> Delete User</a>';

                            actions += '</div></div>';
                            return actions;
                        }
                    }
                ],
            });
        });


        $(document).on("click", ".js-delete", function () {

            debugger;
            var dataId = $(this).attr("data-id");

            $.confirm({
                title: '<i class="fa fa-warning"></i> Please Confirm',
                content: 'Are you sure you want to delete this user?!',
               
                type: 'red',
                closeIcon: true,
                closeIconClass: 'fa fa-close',
                buttons: {
                    cancel: {
                        text: 'Cancel',
                        keys: ['esc'],
                        action: function () {}
                    },
                    confirm: {
                        text: 'Delete',
                        btnClass: 'btn-danger',
                        keys: ['enter'],
                        action: function () {
                            var url = '@Url.Action("Delete")';
                            $.ajax({
                                type: "DELETE",
                                async: false,
                                url: url,
                                dataType: "json",
                                data: {
                                    id: dataId,
                                },
                                success: function (data) {
                                    debugger;
                                    table.ajax.reload();
                                    toastr.success('Deleted Successfully');
                                },
                                error: function (xhr, textStatus, errorThrown) 
                                {
                                    debugger;
                                    toastr.error('Something went wrong!');
                                }
                            });
                        }
                    },

                }
            });
        });
            
    
    </script>


}
